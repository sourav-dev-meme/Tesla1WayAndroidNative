<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f4f4"
    tools:context=".RideType">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/relativeLayout"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:background="@drawable/rideloc" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="RIDE LOCATION"
                android:textSize="20dp"
                android:textStyle="bold" />

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/GridLayout1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:columnCount="2"
                tools:context=".GridXMLActivity">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:onClick="nextClick"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="#ffffff">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ><RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:layout_width="60dp"
                            android:id="@+id/airport_image"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/airport" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:text="Airport"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/airport_image"/>

                    </RelativeLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/cardView1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardBackgroundColor="#ffffff">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ><RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:layout_width="60dp"
                            android:id="@+id/wedding"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/family" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:text="Wedding"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/wedding"/>


                    </RelativeLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="#ffffff">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ><RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:layout_width="60dp"
                            android:id="@+id/business"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/businesscard" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="Business Card"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/business"/>


                    </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>




                <android.support.v7.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardBackgroundColor="#ffffff">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ><RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:layout_width="60dp"
                            android:id="@+id/winetour"
                            android:layout_centerHorizontal="true"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/winetour" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:text="Wine Tour"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/winetour"/>


                    </RelativeLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="#ffffff">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ><RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:layout_width="60dp"
                            android:id="@+id/event"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/event" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="Special Event"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/event"/>


                    </RelativeLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/cardView5"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardBackgroundColor="#ffffff">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ><RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:layout_width="60dp"
                            android:id="@+id/other"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/other" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:text="Other"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/other"/>


                    </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

               

            </GridLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>





