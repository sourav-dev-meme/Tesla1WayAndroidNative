<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.memeinfotech.tesla1way.MainActivity">

    <ImageView
        android:id="@+id/relativeLayout"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/historydetailimg">
    </ImageView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="BOOK A RIDE" />

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#ffffff"
        android:id="@+id/cardView2">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ><RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="60dp"
                android:id="@+id/one_way_image"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/direction" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="One Way"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/one_way_image"/>


        </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/cardView2"
        android:layout_marginRight="15dp"
        app:cardBackgroundColor="#ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ><RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="60dp"
                android:id="@+id/hourly_image"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rideclock" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="Hourly"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/hourly_image"/>


        </RelativeLayout>
        </RelativeLayout>



    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp"
        android:background="@drawable/ridebottom"/>

</RelativeLayout>

